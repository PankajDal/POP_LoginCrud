
@model CRUD_MVC.Models.InvoiceViewModel

<h1>Invoice</h1>
<p>Selected Products: @(TempData["SelectedProducts"] as string)</p>


<table>
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>ProductPrice</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.SelectedProducts)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
            </tr>
        }
    </tbody>
</table>

<p>Total Price: @Model.TotalPrice</p>
